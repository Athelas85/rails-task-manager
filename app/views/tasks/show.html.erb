<h1>My Task</h1>
<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<input type="checkbox"><%= @task.completed %> <br>
<%= link_to 'Edit a task', edit_task_path(@task.id) %>
<%= link_to 'Back to the list', tasks_path %>
<%= link_to 'delete', task_path(@task), method: :delete, data: { confirm: 'Are you sure?' } %>
